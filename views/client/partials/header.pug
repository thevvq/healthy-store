header.header
    .container
        .row.align-items-center
            .col-3
                .inner-logo
                    a(href="/")
                        img(src="/images/logo.svg", alt="Logo")

            .col-9
                .inner-menu
                    ul
                        li
                            button.menu-btn(onclick="window.location.href='/'") Trang chủ
                        li
                            button.menu-btn(onclick="window.location.href='/products'") Sản phẩm
                        li
                            button.menu-btn(onclick="window.location.href='/blog'") Tin mới

                        if !user
                            li
                                button.menu-btn(onclick="window.location.href='/login'") Đăng nhập
                        else
                            li
                                button.profile-btn(onclick="window.location.href='/profile'")
                                    | Xin chào, #{user.fullName}
                            li
                                button.logout-btn(onclick="window.location.href='/login/logout'") Đăng xuất
