extends ../../layouts/default

block main
    .login-container.container.mt-5
        h2.mb-4 Đăng nhập

        if error
            p.text-danger #{error}

        form(method="POST", action="/login")
            .mb-3
                label.form-label Email
                input.form-control(type="email", name="email", required)

            .mb-3
                label.form-label Mật khẩu
                input.form-control(type="password", name="password", required)

            button.btn.btn-primary(type="submit") Đăng nhập
            .mt-3
            a(href="/register") Chưa có tài khoản? Đăng ký

