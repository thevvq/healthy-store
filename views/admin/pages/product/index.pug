extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-change-multi.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)

    h1 Trang danh sách sản phẩm

    .card.mb-3
        .card-header Bộ lọc và Tìm kiếm
        .card-body
            .row
                .col-md-6.mb-2
                    +filter-status(filterStatus)

                .col-md-6
                    +search(keyword)

    .card.mb-3
        .card-header Danh sách sản phẩm
            .card-body
                +form-change-multi(`${prefixAdmin}/products/change-multi?_method=PATCH`)

            table.table.table-hover.table-sm(checkbox-multi='')
                thead
                    tr  
                        th 
                            input(type="checkbox" name="check-all")
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Giá
                        th Vị trí
                        th Trạng thái
                        th Hành động
                tbody
                    each item, index in products
                        tr
                            td 
                                input(
                                    type="checkbox"
                                    name="id"
                                    value=item.id
                                )
                            td #{index + 1}
                            td
                                img(src=item.thumbnail
                                alt=item.title
                                width='100px'
                                height='auto')
                            td #{item.title}
                            td $#{item.price}
                            td 
                                input(
                                    type="number"
                                    name="position"
                                    value=item.position
                                    style="width: 60px;"
                                    min="1"
                                )
                            td
                                if (item.status == 'active')
                                    a.badge.bg-success(
                                        href="#"
                                        data-id=item.id
                                        data-status=item.status
                                        data-btn-change-status=''
                                    ) Hoạt động
                                else
                                    a.badge.bg-danger(
                                        href="#"
                                        data-id=item.id
                                        data-status=item.status
                                        data-btn-change-status=''
                                    ) Dừng hoạt động

                            td
                                button.btn.btn-warning.btn-sm Sửa
                                button.btn.btn-danger.btn-sm.ml-1(data-id=item.id data-btn-delete='') Xóa

    +pagination(pagination)

    form(action=""
        method="POST"
        id="form-change-status"
        data-path=`${prefixAdmin}/products/change-status`
    ) 

    form(action=""
        method="POST"
        id="form-delete-product"
        data-path=`${prefixAdmin}/products/delete-product`
    ) 

    script(src='/admin/js/product.js') 
