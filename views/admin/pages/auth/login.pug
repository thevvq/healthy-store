extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main
    +alert-success(3000)
    +alert-error(5000)

    .container.my-5
        .row.justify-content-center
            .col-md-4
                .card.shadow-sm
                    .card-header.text-center.fw-bold Đăng nhập
                    .card-body
                        form(method="POST" action=`${prefixAdmin}/auth/login`)
                            .mb-3
                                label.form-label(for="email") Email
                                input#email.form-control(type="email" name="email" placeholder="Nhập email" required)

                            .mb-3
                                label.form-label(for="password") Mật khẩu
                                input#password.form-control(type="password" name="password" placeholder="Nhập mật khẩu" required)

                            button.btn.btn-primary.w-100(type="submit") Đăng nhập
