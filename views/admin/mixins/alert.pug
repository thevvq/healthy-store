mixin alert-success(time)
    - if (messages.success)
        .alert.alert-success(role='alert' data-time=time show-alert='') #{messages.success}
            span(close-alert='') x

mixin alert-error(time)
    - if (messages.error)
        .alert.alert-danger(role='alert' data-time=time show-alert='') #{messages.error}
            span(close-alert='') x